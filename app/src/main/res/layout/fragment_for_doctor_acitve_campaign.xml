<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vin.myapplication.fragment_for_Doctor_active_campaign">

    <LinearLayout

        android:id="@+id/activity_live__work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context="com.example.vin.myapplication.LIVE_WORK">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#3F51B5"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:hint="search"
                android:text=""
                android:textColor="#FFFFFF" />


            <ImageButton
                android:id="@+id/btn_refresh_data"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cached_black_48dp"
                android:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btn_add_data"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_black_48dp"
                android:tint="#FFFFFF"
                android:visibility="gone" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/select_employee"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/select_employee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_employee2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"

                    android:fontFamily="@string/fontFamily__roboto_regular"
                    android:gravity="left"
                    android:text="Select Employee"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/name_doctor_of_employee"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingLeft="6dip"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/select_employee3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_expand_more_black_48dp"
                    android:tint="#000000" />

            </LinearLayout>

            <!-- <View
                 android:layout_width="0.3dp"
                 android:layout_height="wrap_content"
                 android:layout_margin="3dp"
                 android:foreground="#000000" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cnt"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/cnt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@string/fontFamily__roboto_regular"
                android:gravity="center_horizontal"
                android:text="Active:0"
                android:textColor="#1EC40D"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cnt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@string/fontFamily__roboto_regular"
                android:gravity="center_horizontal"
                android:text="Camp:0"
                android:textColor="#0D15D1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cnt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@string/fontFamily__roboto_regular"
                android:gravity="center_horizontal"
                android:text="Inactive:0"
                android:textColor="#ff0033"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:id="@+id/vw_employee"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@android:color/darker_gray" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true" />


    </LinearLayout>

</FrameLayout>
