<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="20.0dip"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="ENTER FROM DATE AND TO DATE"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:foreground="#000000" />

    <LinearLayout
        android:id="@+id/select_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/select_employee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/select_employee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@string/fontFamily__roboto_regular"
                android:gravity="left"
                android:text=" SELECT EMPLOYEE"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/name_objective_of_employee"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="6dip"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <ImageButton
                android:id="@+id/select_employee3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_expand_more_black_48dp"
                android:tint="#000000" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/rpt_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/txt_from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/txt_from_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_from_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@string/fontFamily__roboto_regular"
                android:gravity="left"
                android:text=" SELECT FROM DATE"
                android:textColor="#000000"
                android:textSize="18dp" />


            <ImageButton
                android:id="@+id/txt_from_date3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"

                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_expand_more_black_48dp"
                android:tint="#000000" />

            <!--<TextView
                android:id="@+id/name_txt_from_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="6dip"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />-->
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/txt_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/txt_to_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_to_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@string/fontFamily__roboto_regular"
                android:gravity="left"
                android:text=" SELECT TO DATE"
                android:textColor="#000000"
                android:textSize="18dp" />


            <ImageButton
                android:id="@+id/txt_to_date3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"

                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_expand_more_black_48dp"
                android:tint="#000000" />

            <!--<TextView
                android:id="@+id/name_txt_from_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="6dip"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />-->
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- <ImageButton
             android:id="@+id/btn_add_doctor"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_gravity="center_vertical"
             android:layout_marginRight="10dp"
             android:background="@android:color/transparent"
             android:scaleType="fitCenter"
             android:src="@drawable/ic_add_circle_black_48dp"
             android:tint="#000000" />-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:foreground="#000000" />

