<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.vin.myapplication.SplashSreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/lystenlogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="-20dp"


                android:layout_marginTop="0dp"
                android:src="@drawable/lystenlogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/fontFamily__roboto_medium"
                android:gravity="center_horizontal"
                android:text="Lysten Global Live Reporting Application"
                android:textColor="#e64a19"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_app_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/fontFamily__roboto_medium"
                android:gravity="center_horizontal"
                android:text="Version: 7.3"
                android:textColor="#00C853"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:backgroundTint="#2196f3"
                android:gravity="center_horizontal"
                android:indeterminateTint="#e3f2fd"
                android:theme="@style/AppTheme.WhiteAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/fontFamily__roboto_medium"
                android:gravity="center_horizontal"
                android:text="Loding..."
                android:textColor="#3f51b5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/fontFamily__roboto_medium"
                android:gravity="center_horizontal"
                android:text="Please wait"
                android:textColor="#3f51b5"
                android:textSize="16sp" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
