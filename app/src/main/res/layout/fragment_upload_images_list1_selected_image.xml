<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vin.myapplication.fragment_Doctor_List">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_live__work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.vin.myapplication.LIVE_WORK">


        <LinearLayout
            android:id="@+id/select_employee"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/my_gallery1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_weight="3.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_gallery2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@string/fontFamily__roboto_regular"
                    android:gravity="left"
                    android:text="MY GALLERY"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/my_gallery3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_expand_more_black_48dp"
                    android:tint="#000000"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:id="@+id/vw_employee"
                android:layout_width="0.3dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:foreground="#000000" />

            <LinearLayout
                android:id="@+id/select_employee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/share_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight=".1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_share_black_48dp"
                    android:tint="#000000" />

                <ImageButton
                    android:id="@+id/download_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight=".1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_file_download_black_48dp"
                    android:tint="#000000" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/vw_employee1"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginBottom="05dp"
            android:background="@android:color/darker_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/relative_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

        </ScrollView>
