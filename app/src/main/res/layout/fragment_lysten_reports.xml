<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->

        <Button
            android:id="@+id/btn_call_avg_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3F51B5"
            android:text="CALL AVERAGE REPORT"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_call_all_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3F51B5"
            android:text="ALL EMPLOYEES SUMMARY"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_call_individual_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3F51B5"
            android:text="INDIVIDUAL REPORT SUMMARY"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_rpt_camp_book_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3F51B5"
            android:text="REPORT - CAMPAIGN BOOKING"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_rpt_plan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3F51B5"
            android:text="REPORT - PLAN DETAIL"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_rpt_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3F51B5"
            android:text="PRIMARY REPORT"
            android:textColor="#FFFFFF" />

        <!--<Button
            android:id="@+id/btn_employee_daily_plan"
