<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@drawable/mycustom_toast_border_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView

                android:id="@+id/mark"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="H"

                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_weight="9.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:text="Kolhapur"
                    android:textColor="#FF4081"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_sub1">
                <!-- <TextView
                     android:id="@+id/work_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:visibility="visible" />-->


                <TextView
                    android:id="@+id/sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2sp"
                    android:paddingLeft="6dip"
                    android:text="ff"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <TextView
                android:id="@+id/sub_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2sp"
                android:paddingLeft="6dip"
                android:text="ss"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/sub_second2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2sp"
                android:paddingLeft="6dip"
                android:text="ss"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/sub_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2sp"
                android:paddingLeft="6dip"
                android:text="ss"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="normal" />



        </LinearLayout>

    </LinearLayout>
   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.1pt"
        android:background="@android:color/darker_gray" />-->


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>


