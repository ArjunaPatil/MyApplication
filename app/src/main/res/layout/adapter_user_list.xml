<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@drawable/mycustom_toast_border_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mark"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="H"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9.5"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_serial_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:text="User: "
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/img_active_user"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_account_circle_black_48dp"
                    android:tint="#00c853"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/img_block_user"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_block_black_48dp"
                    android:tint="#f44336"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:paddingLeft="6dip"
                    android:text=" Mob.:"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_mob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:paddingLeft="6dip"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img_lock_mast_form"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="04dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_lock_black_24dp"
                    android:tint="#f44336"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/img_open_mast_form"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_lock_open_black_24dp"
                    android:tint="#00c853"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_master_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:text="Master Form"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/img_lock_trans_form"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_lock_black_24dp"
                    android:tint="#f44336"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/img_open_trans_form"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_lock_open_black_24dp"
                    android:tint="#00c853"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_trans_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:text="Transaction Form"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="0.1pt"
         android:background="@android:color/darker_gray" />-->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>
