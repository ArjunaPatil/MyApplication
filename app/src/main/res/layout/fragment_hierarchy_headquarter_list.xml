<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vin.myapplication.fragment_Doctor_List">

    <LinearLayout

        android:id="@+id/activity_live__work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context="com.example.vin.myapplication.LIVE_WORK">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#3F51B5"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:hint="search"
                android:text=""
                android:textColor="#FFFFFF" />


            <ImageButton
                android:id="@+id/btn_refresh_data"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cached_black_48dp"
                android:tint="#FFFFFF" />

            <!--<ImageButton-->
                <!--android:id="@+id/btn_add_data"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/ic_add_black_48dp"-->
                <!--android:tint="#FFFFFF" />-->


        </LinearLayout>

        <View
            android:id="@+id/vw_designation"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@android:color/darker_gray" />


        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true" />


    </LinearLayout>

</FrameLayout>
