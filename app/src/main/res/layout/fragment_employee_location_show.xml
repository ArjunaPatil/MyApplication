<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/activity_live__work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/select_employee"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/select_employee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_employee2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@string/fontFamily__roboto_regular"
                    android:gravity="left"
                    android:text="MY LOCATION"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/name_objective_of_employee"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingLeft="6dip"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/select_employee3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_expand_more_black_48dp"
                    android:tint="#000000" />

            </LinearLayout>

            <View
                android:layout_width="0.3dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:foreground="#000000" />

            <LinearLayout
                android:id="@+id/select_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@string/fontFamily__roboto_regular"
                    android:gravity="left"
                    android:text="dd/mm/yyyy"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/name_date_of_objective"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingLeft="6dip"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/select_date3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_expand_more_black_48dp"
                    android:tint="#000000" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/vw_employee"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@android:color/darker_gray" />

        <!-- <ScrollView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">-->

        <!--<ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true" />-->


        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <TextView
                android:id="@+id/txt_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_textview"
                android:text="Loading.."
                android:textColor="#000000"
                android:textSize="15dp" />
            <!--
            android:gravity="left"
            android:textAlignment="gravity"
            android:layout_marginTop="5dp"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                android:gravity="center_horizontal"-->
        </ScrollView>
        <!--<TextView
            android:id="@+id/txt_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:scrollbars="vertical"
            android:text="Loading.."
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="15dp" />--><!--android:visibility="gone"-->
        <!--</ScrollView>-->
    </LinearLayout>

</LinearLayout>