<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/activity_live__work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#3F51B5">

            <EditText

                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:textColor="#FFFFFF"
                android:text=""
                android:hint="search"
                />


            <ImageButton
                android:id="@+id/btn_refresh_data"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cached_black_48dp"
                android:tint="#FFFFFF"
                android:background="@android:color/transparent"/>

           <!-- <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />-->
           <!-- <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_black_48dp"
                android:tint="#FFFFFF"
                android:background="@android:color/transparent"/>

            <com.example.vin.myapplication.CustomImageButton
                android:id="@+id/btn_doc_call_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add_black_48dp"
                android:tint="#FFFFFF" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:id="@+id/select_employee"
            android:gravity="center_vertical">


                <LinearLayout
                    android:id="@+id/select_employee1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_employee2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"

                        android:fontFamily="@string/fontFamily__roboto_regular"
                        android:gravity="left"
                        android:text="SELECT EMPLOYEE"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/name_objective_of_employee"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingLeft="6dip"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <ImageButton
                        android:id="@+id/select_employee3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="8dp"

                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_expand_more_black_48dp"
                        android:tint="#000000" />


                </LinearLayout>

            <View
                android:layout_width="0.3dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:foreground="#000000" />

                <LinearLayout
                    android:id="@+id/select_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@string/fontFamily__roboto_regular"
                        android:gravity="left"
                        android:text="dd/mm/yyyy"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/name_date_of_objective"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingLeft="6dip"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <ImageButton
                        android:id="@+id/select_date3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_expand_more_black_48dp"
                        android:tint="#000000" />

                </LinearLayout>

        </LinearLayout>



        <View
            android:id="@+id/vw_employee"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@android:color/darker_gray" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Loading.."
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>