    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#0d47a1</item> <!-- Whatever color you want-->
    </style>

    <style name="customtheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>

    <style name="CustomCal">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/black_overlay</item>
        <item name="android:weekNumberColor">@color/cast_expanded_controller_text_color</item>
        <item name="android:weekDayTextAppearance">@style/AppTheme</item>
        <item name="android:dateTextAppearance">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>

        <item name="android:listPreferredItemHeightSmall">30sp</item>
    </style>


